{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "DotEnv",
	"compilerOptions": {
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": false,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"strict": true,
		"sourceMap": true,
		"target": "es6",
		"types": ["@types/node", "@types/jest"],
		"module": "commonjs",
		"outDir": "./dist",
		"baseUrl": "./src"
	},
	"include": ["src"],
	"exclude": ["node_modules", "./dist/**/*.js", "./dist/**/*.ts", "./dist/**/*.test.ts"]
}
